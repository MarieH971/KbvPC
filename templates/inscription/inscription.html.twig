{% extends 'basicPage.html.twig' %}

{% block title %}INSCRIPTION{% endblock %}



{% block page_main %}
    <div>
        <!-- Partie 1 : Logo et Menu -->
        <div class="header">
            <div class="logo">
                <img src="{{ asset('build/images/contour LogoKBV.png') }}" alt="logo Kbv">
            </div>
            <div class="menu">
                <h2>Menu de la page</h2>
                <ul>

                    <li><a href="#adhesion">Adhérer à l'association</a></li>
                    <li><a href="#documents">Documents à fournir</a></li>
                    <li><a href="#tarifs">Tarifs</a></li>
                </ul>
            </div>
        </div>

        <!-- Partie 1 : Adhésion (section d'adhésion avec un id pour l'ancre) -->
        <div class="adhesion" id="adhesion">
            <h2>Adhésion à l'association</h2>
            <p>Informations et formulaire pour adhérer à l'association.</p>
            <a href="{{ path('app_inscription_form') }}">
        <button class="btn btn-primary btn-custom">ADHÉRER À L'ASSOCIATION</button>
            </a>
        </div>



       <!-- Partie 2 : Documents à fournir -->
        <div class="documents" id="documents">
            <h2>Documents à fournir</h2>
            <ul>
                <li>Formulaire demande de licence</li>
                <li>Certificat médical (annotation: le certificat est valable 3 ans)</li>
            </ul>
            <button class="btn btn-primary btn-custom" id="uploadButton" style="margin-top: 10px;">TRANSMETTRE MES DOCUMENTS</button>
            <input type="file" id="fileInput" style="display: none;" />
            
            
        </div>
        
        <div class="tarifs" id="tarifs">
            <h2>Tarifs</h2>
            <ul>
                <li>Adhésion simple : Jeu libre compris sur réservation</li>
                <li>Adhésion avec Entraînements</li>
                <li>Sport Santé</li>
            </ul>
        </div>
        </div>
     <script>
        
        // Lorsque l'utilisateur clique sur le bouton "TRANSMETTRE MES DOCUMENTS"
        document.getElementById("uploadButton").addEventListener("click", function() {
            // On déclenche le clic sur le champ input file caché
            document.getElementById("fileInput").click();
        });
    </script>
    
{% endblock %}
