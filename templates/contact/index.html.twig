{% extends 'basicPage.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}


{% block page_main %}


    <h1>Contactez-nous</h1>
    

    {{ form_start(form, {'attr': {'id': 'form'}}) }}
    

    <p>SAISISSEZ VOTRE DEMANDE</p>

    <div class="form-group">
        <label for="{{ form.firstName.vars.id }}">Votre pr√©nom</label>
        <br />
        <div class="input-group">
            <div class="input-group-addon"></div>
            {{ form_widget(form.firstName) }}
        </div>
    </div>

    <div class="form-group">
        <label for="{{ form.lastName.vars.id }}">Votre nom</label>
        <br />
        <div class="input-group">
            <div class="input-group-addon"></div>
            {{ form_widget(form.lastName) }}
        </div>
    </div>

    <div class="form-group">
        <label for="{{ form.email.vars.id }}">Votre email</label>
        <br />
        <div class="input-group">
            <div class="input-group-addon"></div>
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="form-group">
        <label for="{{ form.subject.vars.id }}">Objet</label>
        <br />
        <div class="input-group">
            <div class="input-group-addon"></div>
            {{ form_widget(form.subject) }}
        </div>
    </div>

    <div class="form-group">
        <label for="{{ form.message.vars.id }}">Message</label>
        <br />
        <div class="input-group">
            <div class="input-group-addon"></div>
            {{ form_widget(form.message) }}
        </div>
    </div>

    <button type="submit" class="btn btn-default" style="background-color: #f5f5f5;">ENVOYER</button>

    {{ form_end(form) }}
{% endblock %}
