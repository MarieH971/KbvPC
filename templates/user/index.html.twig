{% extends 'basicPage.html.twig' %}



{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('list') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('list') }}
{% endblock %}


{% block page_main %}
<h1>LISTE DES INSCRIPTIONS</h1>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                    <th><span>Id</span></th>
                                    <th><span>Prénom</span></th>
                                    <th><span>Nom</span></th>
                                    <th><span>Photo</span></th>
                                    <th><span>Téléphone</span></th>
                                    <th><span>Email</span></th>
                                    
                                    <th><span>Date de naissance</span></th>
                                    <th><span>Date de création</span></th>
                                    <th><span>Niveau</span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.firstName }}</td>
                                        <td>{{ user.lastName }}</td>
                                        <td><img src="{{ user.photo }}" alt="Photo" width="50" height="50"></td>
                                        <td>{{ user.phone }}</td>
                                        <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                                        
                                        <td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
                                        <td>{{ user.registrationDate ? user.registrationDate|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ user.level.value }}</td>

                                        <td style="width: 20%;">
                                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="table-link">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="table-link">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                            <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="table-link danger">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="11">Aucun utilisateur trouvé.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_user_new') }}">CRÉATION NOUVELLE ADHÉRENTE</a>
{% endblock %}
